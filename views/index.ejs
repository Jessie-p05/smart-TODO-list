  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>

<body class="all-background">
  <div>
    <nav id="container" class="navbar navbar-light justify-content-between">
      <a class="navbar-brand">SmartList</a>
      <label class="nav-buttons">
        <button type="button" class="btn btn-binary" style="font-size: x-large;">ALL</button>
        <button type="button" class="btn btn-binary" style="font-size: x-large;">TO EAT</button>
        <button type="button" class="btn btn-binary" style="font-size: x-large;">TO READ</button>
        <button type="button" class="btn btn-binary" style="font-size: x-large;">TO WATCH</button>
        <button type="button" class="btn btn-binary" style="font-size: x-large;">TO SHOP</button>
      </label>
      <div>
        <p2 style="font-style: italic;">Welcome, User 1</p2>
      </div>
    </nav>
  </div>

  <div class="grid-container">
    <div class="header">
      <header>
        <div>
          <form method="POST" action="users/<%= userTodoLists[0].user_id %>/new">
            <input name="todolist" class="justify-content-center" type="text" placeholder="Something you'd like to add"
              style="width: 450px;margin: 1em;padding-top: 0.5;height: 60.99306px;">

            <button type="submit" class="btn btn-warning btn-lg">Add</button>
          </form>
        </div>
      </header>
    </div>

    <div class="left"></div>
    <div class="middle">
      <div>
        <h2>My List</h2>
        <section class="lists-body" id="lists-body">
          <ol>

            <% for(let todoItem of userTodoLists) { %>
              <li>
                <div id="list">
                  <form action="/users/<%= todoItem.user_id %>/todolist/<%= todoItem.todolist_id %>?_method=DELETE"
                    method="POST" class="">
                    <div class="checkbox">
                      <input type="checkbox" id="<%=todoItem.id %>" name="<%=todoItem.id %>" class="checkbox">
                      <label for="<%=todoItem.id %>">
                        <%=todoItem.user_id %>
                      </label>
                      <label for="<%=todoItem.id %>">
                        <%=todoItem.user_input %>
                      </label>
                      <button type="button" class="btn btn-warning btn-circle"><i
                          class="glyphicon glyphicon-remove"></i></button>
                    </div>
                  </form>



                  <!-- <form action="" method="POST" class="">
                    <label for="<%=todoItem.type %>">
                      <%=todoItem.type %>
                    </label>
                    <input type="submit" name="todoItem.type" value="update category">
                    <div class="buttons"></div>
                  </form> -->

                  <form method="POST" action="/users/<%= todoItem.user_id %>/<%= todoItem.todolist_id %>?_method=PUT"
                    id="changeCate">
                    <%=todoItem.type %>
                      <input type="submit" value="change category">
                      <select name="categoryDropdown" class="categoryDropdown" method="PUT">
                        <% for(let type of types) { %>
                          <option type="hidden" value="<%=type.id%>" id="<%=type.id%>">
                            <%=type.type%>
                          </option>
                          <% } %>
                      </select>
                  </form>


                </div>
              </li>
              <% } %>
          </ol>
        </section>
      </div>
    </div>

    <div class="right"></div>

    <!-- <div class="grid">
    <div><img src="/images/HarryPotterBooks.png" alt="HarryPotterBook"></div>
    <div><img src="/images/HarryPotterBooks.png" alt="HarryPotterBook"></div>
    <div><img src="/images/HarryPotterBooks.png" alt="HarryPotterBook"></div>
    <div><img src="/images/HarryPotterBooks.png" alt="HarryPotterBook"></div>
  </div> -->


    <div class="footer">
      <p>Footer</p>
    </div>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="./routes/users.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>

</body>

</html>
